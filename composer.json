{
    "name": "selective/transformer",
    "type": "library",
    "description": "A strictly typed array transformer with dot-access, fluent interface and filters.",
    "keywords": [
        "transformer",
        "mapper",
        "hydator",
        "converter",
        "dot",
        "dot-access",
        "typed",
        "array",
        "json"
    ],
    "homepage": "https://github.com/selective-php/transformer",
    "license": "MIT",
    "require": {
        "php": "^7.2 || ^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "overtrue/phplint": "^2.3",
        "phpstan/phpstan": "0.*",
        "phpunit/phpunit": "^8 || ^9",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Selective\\Transformer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Selective\\Transformer\\Test\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@lint",
            "@cs:check",
            "@sniffer:check",
            "@phpstan",
            "@test:coverage"
        ],
        "cs:check": "php-cs-fixer fix --dry-run --format=txt --verbose --diff --diff-format=udiff --config=.cs.php",
        "cs:fix": "php-cs-fixer fix --config=.cs.php",
        "lint": "phplint ./ --exclude=vendor --no-interaction --no-cache",
        "phpstan": "phpstan analyse src --level=max -c phpstan.neon --no-progress --ansi",
        "sniffer:check": "phpcs --standard=phpcs.xml",
        "sniffer:fix": "phpcbf --standard=phpcs.xml",
        "test": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always",
        "test:coverage": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    }
}
